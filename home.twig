{% extends "layout.twig" %}

{% block content %}

{% include "includes/header.twig" %}

<div class="logo-header">
    <div class="logo-container container">
        <div class="header-logo">
            {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
        </div>
        <div class="header-companyname">
            {{widget('companyname', 'companyname', {"business": "profile"})|raw}}
        </div>
        <div class="header-extendednavigation">
            {{widget('extendednavigation', 'extendednavigation', {"align":"right"})|raw}}
        </div>
    </div>
</div>

<!-- Container -->
<div class="page-content container">
    <div class="feature-container clearfix">
        <div class="feature-right-container">
            {{widget('feature', 'feature-right', {
                "header": "profile",
                "strapline": "profile",
                "defaultBgImg": asset('images/feature-img1.jpg'),
                "positionTopPercentage": "50",
                "showBtn": true,
                "buttonText": "Lorem Ipsum"
            })|raw}}
        </div>
    </div>
    <div class="homepage-slideshow">
    	{{widget('responsiveslideshow', 'slideshow', {
    	    'duration':'3',
    	    'transSpeed': '1000',
    	    'transType': 'fade',
    	    'showButtons': true,
    	    'showBullets': true,
    	    'allowPause': false,
    	    'allowLoop': true,
    	    'images':[
    	      {
    	        'imageHeight':'400',
    	        'imageWidth':'1000',
    	        'url':asset('/images/slideshow/slideshow-1.jpg'),
    	        'title':'First slide title',
    	        'description': 'First slide description'
    	      },
    	      {
    	        'imageHeight':'400',
    	        'imageWidth':'1000',
    	        'url':asset('/images/slideshow/slideshow-2.jpg'),
    	        'title':'Second slide title',
    	        'description': 'Second slide description'
    	      },
    	      {
    	        'imageHeight':'400',
    	        'imageWidth':'1000',
    	        'url':asset('/images/slideshow/slideshow-3.jpg'),
    	        'title':'Third slide title',
    	        'description': 'Third slide description'
    	      }
    	    ]
    	})|raw}}
    </div>

    <!-- Page Content -->
    <section class="template-content">
    	<!-- Main Widet Zone -->
       	{{zone('main')|raw}}
    </section>
    <!-- End Page Content -->

{% include "includes/footer.twig" %}

</div>

{% endblock %}
